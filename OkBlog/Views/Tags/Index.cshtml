@model IEnumerable<Tag>
@{
	ViewBag.Title = "Список тегов";
}
<h2>Все теги</h2>

<p>
    <a class="add-user" asp-action="Create">Добавить тег</a>
</p>

<table class="table table-striped">
	<tr><th>Название</th></tr>
	<tbody>
		@if (Model.Count() == 0)
		{
			 <tr>
                <td colspan="3" style="color:red">
                    No Tags Created
                </td>
			</tr>
		}
		else
		{
			@foreach (var tag in Model)
			{
				<tr>
					<td>@tag.Name</td>
					<td>
						<form class="right-position">
							<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@tag.Id">Изменить</a>
							<button class="btn btn-sm btn-danger" asp-controller="Tags" asp-action="Delete" asp-route-id="@tag.Id">Удалить</button>
						</form>
					</td>
				</tr>				
			}
		}
	</tbody>
</table>

